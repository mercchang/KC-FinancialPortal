@model IEnumerable<KC_FinancialPortal.Models.Household>

<div class="container-fluid ">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Households</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="householdsTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Greeting)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var house in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => house.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => house.Greeting)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => house.Created)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = house.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = house.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = house.Id })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-info rounded-circle">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">To Dashboard</h6>
                        </div>
                    </div>
                </div>
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Create", "Households")" value="Create" class="btn btn-success btn-circle">
                                <i class="fas fa-check"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">Create Household</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#householdsTable').DataTable();
        });
    </script>
}
