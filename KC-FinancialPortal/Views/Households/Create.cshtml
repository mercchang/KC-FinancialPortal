@model KC_FinancialPortal.Models.Household

@{
    ViewBag.Title = "Create";
}

<div class="col-6 container-fluid">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Create a Household</h6>
        </div>

        @using (Html.BeginForm(new { @class = "form-horizontal user"} ))
        {
            <div class="card-body">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h6>After creating your household, you will automatically be promoted to the head of the household.</h6>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Add Name..." } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Greeting, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Greeting, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Add Message..." } })
                            @Html.ValidationMessageFor(model => model.Greeting, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>

            <div class="card-footer">
                <div class="form-group">
                    <div class="row">
                        <div class="col-6 text-center">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-info rounded-circle">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                            <h6 class="button-text small">Back</h6>
                        </div>
                        <div class="col-6 text-center">
                            <button type="submit" value="Create" class="btn btn-success btn-circle">
                                <i class="fas fa-check"></i>
                            </button>
                            <h6 class="button-text small">Create</h6>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>