@model IEnumerable<KC_FinancialPortal.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid ">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Transactions</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="transactionsTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.BankAccount.OwnerId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BudgetItem.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Owner.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TransactionType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Memo)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BankAccount.OwnerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BudgetItem.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Owner.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TransactionType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Memo)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Index", "Transactions")" class="btn btn-info rounded-circle">
                                <i class="fas fa-arrow-left"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">All Transactions</h6>
                        </div>
                    </div>
                </div>
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Create", "Transactions")" value="Create" class="btn btn-success btn-circle">
                                <i class="fas fa-check"></i>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">Create Transaction</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#transactionsTable').DataTable();
        });
    </script>
}
