@model IEnumerable<KC_FinancialPortal.Models.BudgetItem>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Budget Items</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="budgetItemsTable" cellspacing="0">
                    <tr>
                        <th>
                            Owner
                        </th>
                        <th>Budget</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TargetAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentAmount)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budget.Owner.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budget.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TargetAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentAmount)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row pt-2">
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Index","Home")" class="btn btn-info btn-circle"><i class="fa fa-arrow-left"></i></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">To Dashboard</h6>
                        </div>
                    </div>
                </div>
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <a href="@Url.Action("Create","BudgetItems")" class="btn btn-success btn-circle"><i class="fas fa-star"></i></a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h6 class="button-text small">Create New Budget Item</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
        $('#budgetItemsTable').DataTable();
        });
    </script>
}
